@model AmigosAuction.Entities.Comment

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_EntityLayout.cshtml";
}
<br />
<h2>Details</h2>
<br />
<div>
    <h4>Comment</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Comment
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Text)
        </dd>

        <dt>
            User
        </dt>

        <dd>
            @if (Model.UserID != null)
            {
                @Html.DisplayFor(model => model.UserID)
            }
            else
            {
                <span>Anonymous</span>
            }

        </dd>

        <dt>
            Commented on
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TimeStamp)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Rating)
        </dt>

        <dd>
            @{
                var left = 5 - Model.Rating;
                for (int i = 0; i < left; i++)
                {
                    <i class="fas fa-star text-warning" style="font-size:small"></i>
                }
                for (int i = 0; i < Model.Rating; i++)
                {
                    <i class="far fa-star text-warning" style="font-size:small"></i>
                }
            }
        </dd>

        <dt>
            Entity
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EntityID)
        </dd>

        <dt>
            Auction No
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RecordID)
        </dd>

    </dl>
</div>
<p class="btn btn-outline-info">
    @Html.ActionLink("Back to Dashboard", "Index")
</p>

<br/>

<script>
    $(function () {
        $('#activeComment').addClass('active');
    });
</script>
