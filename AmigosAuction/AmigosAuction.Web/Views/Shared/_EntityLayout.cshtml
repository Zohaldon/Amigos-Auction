<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="An Online Auction Platform">
    <meta name="author" content="Parth Chandgadhiya">

    <title>@ViewBag.Title - Amigos Auction</title>

    <link rel="shortcut icon" type="image/png" href="https://banner2.kisspng.com/20180704/ape/kisspng-dashboard-computer-icons-report-computer-software-5b3c9a7f71f845.4414420815306983674668.jpg" />
    <!-- Custom fonts for this template-->
    <link href="~/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <!-- Page level plugin CSS-->
    <link href="~/Content/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/Content/css/sb-admin.css" rel="stylesheet">
    <!-- Bootstrap core JavaScript-->
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Content/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Page level plugin JavaScript-->
    <script src="~/Content/vendor/chart.js/Chart.min.js"></script>
    <script src="~/Content/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/Content/vendor/datatables/dataTables.bootstrap4.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Content/js/sb-admin.min.js"></script>

    <!-- Demo scripts for this page-->
    <script src="~/Content/js/demo/datatables-demo.js"></script>
    <script src="~/Content/js/demo/chart-area-demo.js"></script>
</head>

<body>


    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">Amigos Auction Dashboard</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","Admin")">Admin Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="activeComment" href="@Url.Action("Index","Comments")">Comment Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="activeAuction" href="@Url.Action("Index","Auctions")">Auction Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="activeCategory" href="@Url.Action("Index","Categories")">Category Dashboard</a>
                    </li>
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </div>
    </nav>


    <div class="container">
        @RenderBody()

    </div>

    <br />

    <!-- Footer -->
    <footer class="bg-dark fixed-bottom">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; Amigos Auction 2019</p>
        </div>
        <!-- /.container -->
    </footer>
    <link href="~/Content/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
</body>
</html>
