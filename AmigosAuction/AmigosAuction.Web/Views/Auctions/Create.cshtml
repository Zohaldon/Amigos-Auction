@model AmigosAuction.Entities.Auction

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_EntityLayout.cshtml";
}

<br/>
<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
